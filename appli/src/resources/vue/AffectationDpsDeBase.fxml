                                </FXCollections>
                            </items>
                        </ComboBox>
                    </children>
                    <VBox.margin>
                        <Insets top="30.0" bottom="55.0" right="40.0"/>
                    </VBox.margin>
                </HBox>

                <StackPane prefHeight="876.0"
                           stylesheets="@../style/ListeRechercheSecouri.css">
                    <VBox.margin>
                        <Insets left="100.0" right="300.0" top="10.0"/>
                    </VBox.margin>
                    <styleClass>
                        <String fx:value="scrollContour"/>
                        <String fx:value="shadow"/>
                    </styleClass>
                    <children>
                        <!-- Contenu dynamique -->
                    </children>
                </StackPane>
            </children>
        </VBox>
    </center>

    <bottom>
        <HBox prefHeight="100.0"
              style="-fx-background-color: #F97316;"
              BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="16.0"/>
            </BorderPane.margin>
        </HBox>
    </bottom>

</BorderPane>
