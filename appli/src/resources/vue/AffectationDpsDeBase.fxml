    <top>
        <Pane fx:id="headerPlaceholder" prefHeight="100.0" />
    </top>

    <left>
        <VBox>
            <children>
                <!-- Barre de recherche -->
                <HBox prefHeight="43.0" prefWidth="395.0" styleClass="BarDeRechercheSecouriste" stylesheets="@../style/ListeRechercheSecouri.css">
                    <children>
                        <ImageView fx:id="LogoRechercherEntry" fitHeight="33.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
