                                <Insets left="8.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets bottom="55.0" top="30.0" />
                    </VBox.margin>
                </HBox>

                <!-- Liste des DPS (avec cases à cocher) -->
                <StackPane prefHeight="791.0" styleClass="shadow" stylesheets="@../style/ListeRechercheSecouri.css" BorderPane.alignment="CENTER">
