<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.*?>
<?import javafx.scene.paint.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="1080.0" prefWidth="1920.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../style/AffectationDpsDeBase.css" >

    <top>
        <Pane prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </top>

    <left>
        <VBox>
            <children>
                <!-- Barre de recherche -->
                <HBox prefHeight="43.0" prefWidth="395.0"
                    styleClass="BarDeRechercheSecouriste"
                    stylesheets="@../style/ListeRechercheSecouri.css">
                    <children>
                        <ImageView fx:id="LogoRechercherEntry"
                                fitHeight="33.0" fitWidth="44.0"
                                pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/loupeRecherche.png"/>
                            </image>
                            <HBox.margin>
                                <Insets top="8.0" left="8.0"/>
                            </HBox.margin>
                        </ImageView>
                        <TextField fx:id="RechercheSecouristeTextFil"
                                alignment="CENTER" prefHeight="20.0" prefWidth="309.0"
                                promptText="Rechercher un DPS"
                                styleClass="BarDeRechercheSecouriste"
                                stylesheets="@../style/ListeRechercheSecouri.css">
                            <HBox.margin>
                                <Insets left="8.0"/>
                            </HBox.margin>
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets top="30.0" bottom="55.0"/>
                    </VBox.margin>
                </HBox>

                <!-- Liste des DPS (avec cases à cocher) -->
                <StackPane prefHeight="791.0"
                        styleClass="shadow"
                        stylesheets="@../style/ListeRechercheSecouri.css"
                        BorderPane.alignment="CENTER">
                    <children>
                        <ScrollPane fx:id="ScrollPaneRechercheSecou"
                                    fitToWidth="true"
                                    prefHeight="791.0" prefWidth="413.0"
                                    styleClass="scrollContour"
                                    stylesheets="@../style/ListeRechercheSecouri.css">
                            <content>
                                <VBox alignment="TOP_CENTER"
                                    prefHeight="719.0" prefWidth="409.0"
                                    style="-fx-background-color: white;">
                                    
                                     <!-- AJOUT : ici on décale tout le contenu vers le bas -->
                                    <padding>
                                    <Insets top="20.0" right="0" bottom="0" left="0"/>
                                    </padding>

                                    <children>
                                        <!-- Exemple de DPS -->
                                        <CheckBox fx:id="chkSkiAlpin"
                                                text="Ski Alpin"
                                                styleClass="dps-checkbox"
                                                prefWidth="350" prefHeight="60">
                                            <padding>
                                                <Insets top="5.0" right="0" bottom="0" left="8.0"/>
                                            </padding>
                                        </CheckBox>
                                        <!-- Ajoutez ici d'autres cases à cocher pour chaque DPS -->
                                    </children>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </children>
                    <padding>
                        <Insets top="-3.0" right="4.0" bottom="3.0" left="3.0"/>
                    </padding>
                    <BorderPane.margin>
                        <Insets left="30.0"/>
                    </BorderPane.margin>
                </StackPane>
            </children>
            <BorderPane.margin>
                <Insets left="40.0"/>
            </BorderPane.margin>
        </VBox>
    </left>



    <center>
        <VBox prefHeight="200.0" prefWidth="100.0"
              BorderPane.alignment="CENTER">
            <children>
                <!-- Boutons Clear & Auto-Affectation + Combobox -->
                <HBox spacing="20.0" alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="btnClearAffectation"
                                text="Clear Affectation"
                                styleClass="action-button"
                                prefWidth="240" prefHeight="85"/>
                        <Button fx:id="btnAutoAffectation"
                                text="Auto Affectation"
                                styleClass="action-button"
                                prefWidth="240" prefHeight="85"/>
                        <Label text="Jour"/>
                        <ComboBox fx:id="cbJour" prefWidth="80">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <Integer fx:value="1"/>
                                    <Integer fx:value="2"/>
