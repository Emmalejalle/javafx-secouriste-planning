                                <VBox fx:id="vboxListeDps" alignment="TOP_CENTER" prefHeight="719.0" prefWidth="409.0" style="-fx-background-color: white;">
                                    
                                     <!-- AJOUT : ici on décale tout le contenu vers le bas -->
                                    <padding>
                                    <Insets bottom="0" left="0" right="0" top="20.0" />
                                    </padding>

                                    <children>
                                        <!-- Exemple de DPS -->
                                        <CheckBox fx:id="chkSkiAlpin" contentDisplay="CENTER" onAction="#onSelectDps" prefHeight="84.0" prefWidth="352.0" styleClass="dps-checkbox" text="Ski Alpin">
                                            <padding>
                                                <Insets bottom="0" left="8.0" right="0" top="5.0" />
                                            </padding>
                                        </CheckBox>
                                        <!-- Ajoutez ici d'autres cases à cocher pour chaque DPS -->
                                    </children>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </children>
                    <padding>
                        <Insets bottom="3.0" left="3.0" right="4.0" top="-3.0" />
                    </padding>
                    <BorderPane.margin>
                        <Insets left="30.0" />
                    </BorderPane.margin>
                </StackPane>
            </children>
            <BorderPane.margin>
                <Insets left="40.0" />
            </BorderPane.margin>
        </VBox>
    </left>



