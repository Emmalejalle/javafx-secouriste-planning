                                    <Integer fx:value="29"/>
                                    <Integer fx:value="30"/>
                                    <Integer fx:value="31"/>
                                </FXCollections>
                            </items>
                        </ComboBox>
                        <Label text="Mois"/>
                        <ComboBox fx:id="cbMois" prefWidth="100">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <Integer fx:value="1"/>
                                    <Integer fx:value="2"/>
                                    <Integer fx:value="3"/>
                                    <Integer fx:value="4"/>
                                    <Integer fx:value="5"/>
                                    <Integer fx:value="6"/>
                                    <Integer fx:value="7"/>
