<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="details-pane-container" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FormulaireDpsController">
    <top>
        <Label fx:id="titreFormLabel" styleClass="details-titre" text="Créer un nouveau DPS" /> </top>
    <center>
        <GridPane hgap="40.0" vgap="10.0">
            <padding><Insets top="20.0" /></padding>
            <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label styleClass="form-label" text="Sport :" />
                <ComboBox fx:id="sportComboBox" prefWidth="400.0" promptText="Choisir un sport" />
            </VBox>
            <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label styleClass="form-label" text="Site :" />
                <ComboBox fx:id="siteComboBox" prefWidth="400.0" promptText="Choisir un site" />
            </VBox>
            <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label styleClass="form-label" text="Horaire début :" />
                <Spinner fx:id="heureDebutSpinner" editable="true" max="23" min="0" />
            </VBox>
            <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label styleClass="form-label" text="Horaire fin :" />
                <Spinner fx:id="heureFinSpinner" editable="true" max="24" min="1" />
            </VBox>
            <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <Label styleClass="form-label" text="Journée :" />
                <DatePicker fx:id="journeePicker" />
            </VBox>
        </GridPane>
    </center>
    <bottom>
         <VBox spacing="10.0">
            <padding><Insets top="20.0" /></padding>
            <Separator />
            <Label styleClass="form-label" text="Ajouter des besoins en compétence (nombre) :" />
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <ComboBox fx:id="competenceComboBox" prefWidth="300.0" promptText="Choisir une compétence" />
                <Spinner fx:id="nombreSpinner" editable="true" initialValue="1" max="20" min="1" prefWidth="80.0" styleClass="number-spinner" />
                <Button onAction="#onAjouterBesoin" text="+" />
            </HBox>
            <ListView fx:id="besoinsListView" prefHeight="100.0" />
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <padding><Insets top="20.0" /></padding>
                <Button onAction="#onAnnuler" style="-fx-background-color: #6B7280;" styleClass="button-primary" text="Annuler" />
                <Button fx:id="validerButton" onAction="#onValider" styleClass="button-primary" text="Créer" /> </HBox>
        </VBox>
    </bottom>
</BorderPane>