<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.FicheAffectationDPSController"
            stylesheets="@../style/FicheAffectationDPS.css"
            fitToWidth="true" fitToHeight="true"
            hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED">
   <content>
      <VBox spacing="25.0" style="-fx-background-color: white;" 
            minWidth="800.0" prefWidth="850.0">
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
         
         <children>
            <!-- TITRE -->
            <Label fx:id="lblTitre" styleClass="titre-dps" text="Fiche DPS - Football" />
            
            <!-- INFORMATIONS DPS EN GRILLE 3x2 -->
            <VBox spacing="20.0">
               <children>
                  <Label styleClass="section-title" text="Informations générales" />
                  
                  <GridPane hgap="25.0" vgap="15.0" styleClass="info-grid"
                            minWidth="750.0" prefWidth="770.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="250.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="250.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="250.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="60.0" prefHeight="70.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="60.0" prefHeight="70.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     
                     <!-- Ligne 1 -->
                     <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="5.0">
                        <Label styleClass="info-label" text="Sport" />
                        <Label fx:id="lblSport" styleClass="info-value" text="Football" wrapText="true" />
                     </VBox>
                     
                     <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="5.0">
                        <Label styleClass="info-label" text="Site" />
                        <Label fx:id="lblSite" styleClass="info-value" text="Stade Municipal" wrapText="true" />
                     </VBox>
                     
                     <VBox GridPane.columnIndex="2" GridPane.rowIndex="0" spacing="5.0">
                        <Label styleClass="info-label" text="Date" />
                        <Label fx:id="lblDate" styleClass="info-value" text="15/08/2025" wrapText="true" />
                     </VBox>
                     
                     <!-- Ligne 2 -->
                     <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" spacing="5.0">
                        <Label styleClass="info-label" text="Heure début" />
                        <Label fx:id="lblHeureDebut" styleClass="info-value" text="14:00" wrapText="true" />
                     </VBox>
                     
                     <VBox GridPane.columnIndex="1" GridPane.rowIndex="1" spacing="5.0">
                        <Label styleClass="info-label" text="Heure fin" />
                        <Label fx:id="lblHeureFin" styleClass="info-value" text="18:00" wrapText="true" />
                     </VBox>
                     
                     <VBox GridPane.columnIndex="2" GridPane.rowIndex="1" spacing="5.0">
                        <Label styleClass="info-label" text="Statut" />
                        <Label fx:id="lblStatut" styleClass="statut-label" text="Complet" />
                     </VBox>
                  </GridPane>
               </children>
            </VBox>
            
            <!-- SEPARATOR -->
            <Separator />
            
            <!-- AFFECTATIONS PAR COMPÉTENCE -->
            <VBox spacing="20.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label styleClass="section-title" text="Affectations par compétence" />
                  
                  <VBox fx:id="vboxCompetences" spacing="12.0">
                     <!-- Les lignes d'affectation seront ajoutées dynamiquement ici -->
                  </VBox>
               </children>
            </VBox>
            
            <!-- BOUTONS D'ACTION -->
            <HBox alignment="CENTER_RIGHT" spacing="20.0">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="btnRafraichir" onAction="#onRafraichir" 
                          styleClass="btn-secondary" text="Rafraîchir" />
                  <Button fx:id="btnFermer" onAction="#onFermer" 
                          styleClass="btn-primary" text="Fermer" />
               </children>
            </HBox>
         </children>
      </VBox>
   </content>
</ScrollPane>