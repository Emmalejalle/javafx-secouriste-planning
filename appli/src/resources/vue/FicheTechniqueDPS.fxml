<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="details-pane-container" 
            xmlns="http://javafx.com/javafx/8" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.FicheDpsController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <children>
                <Label styleClass="details-titre" text="Détails du DPS" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="modifierButton" onAction="#onModifier" 
                        styleClass="button-primary" text="Modifier" />
                <Button fx:id="supprimerButton" onAction="#onSupprimer" 
                        styleClass="button-danger" text="Supprimer" />
            </children>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
            <content>
                <GridPane hgap="15.0" vgap="15.0">
                    <padding><Insets top="25.0" left="5.0" right="5.0" bottom="20.0" /></padding>
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="120.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>

                    <Label styleClass="form-label" text="Sport :" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <Label fx:id="sportText" styleClass="details-value" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label styleClass="form-label" text="Site :" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <Label fx:id="siteText" styleClass="details-value" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                    <Label styleClass="form-label" text="Journée :" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <Label fx:id="journeeText" styleClass="details-value" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                    <Label styleClass="form-label" text="Horaires :" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <Label fx:id="horairesText" styleClass="details-value" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                    <Separator GridPane.rowIndex="4" GridPane.columnSpan="2">
                        <GridPane.margin><Insets top="10.0" bottom="10.0" /></GridPane.margin>
                    </Separator>

                    <Label styleClass="form-label" text="Besoins en compétences :" 
                           GridPane.rowIndex="5" GridPane.columnSpan="2" />
                    <VBox fx:id="besoinsVBox" spacing="5.0" 
                          GridPane.rowIndex="6" GridPane.columnSpan="2" />
                    
                    <Separator GridPane.rowIndex="7" GridPane.columnSpan="2">
                        <GridPane.margin><Insets top="15.0" bottom="10.0" /></GridPane.margin>
                    </Separator>
                    
                    <Label styleClass="form-label" text="Secouristes affectés :" 
                           GridPane.rowIndex="8" GridPane.columnSpan="2" />
                    <VBox fx:id="secouristesVBox" spacing="5.0" 
                          GridPane.rowIndex="9" GridPane.columnSpan="2" />
                </GridPane>
            </content>
        </ScrollPane>
    </center>
    <padding>
        <Insets bottom="20.0" left="25.0" right="25.0" top="15.0" />
    </padding>
</BorderPane>