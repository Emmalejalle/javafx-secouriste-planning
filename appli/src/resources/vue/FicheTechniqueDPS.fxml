<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="details-pane-container" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FicheDpsController">
    <top>
        <Label styleClass="details-titre" text="Détails du DPS" />
    </top>
    <center>
        <GridPane hgap="10" vgap="10">
    <padding><Insets top="20.0" left="20.0" right="20.0" bottom="20.0" /></padding>

    <Label styleClass="form-label" text="Sport :" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <Label fx:id="sportText" styleClass="details-value" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <Label styleClass="form-label" text="Site :" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <Label fx:id="siteText" styleClass="details-value" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <Label styleClass="form-label" text="Journée :" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <Label fx:id="journeeText" styleClass="details-value" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <Label styleClass="form-label" text="Horaires :" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <Label fx:id="horairesText" styleClass="details-value" GridPane.rowIndex="3" GridPane.columnIndex="1" />

    <Separator GridPane.rowIndex="4" GridPane.columnSpan="2" />

    <Label styleClass="form-label" text="Besoins en compétences :" GridPane.rowIndex="5" GridPane.columnSpan="2" />
    <VBox fx:id="besoinsVBox" spacing="5.0" GridPane.rowIndex="6" GridPane.columnSpan="2" />
</GridPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <padding><Insets top="20.0" right="20.0" bottom="20.0" /></padding>
            <Button fx:id="supprimerButton" onAction="#onSupprimer" styleClass="button-danger" text="Supprimer" />
            <Button fx:id="modifierButton" onAction="#onModifier" styleClass="button-primary" text="Modifier" />
        </HBox>
    </bottom>
</BorderPane>