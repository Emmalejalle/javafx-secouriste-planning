<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane stylesheets="@../style/form.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" >

    <top>
        <HBox prefHeight="60" style="-fx-background-color: #F97316;" />
    </top>

    <center>
        <HBox alignment="CENTER" spacing="0" style="-fx-background-color: #ffffff;">
           <children>
               <!-- Colonne de gauche -->
               <VBox alignment="CENTER" prefWidth="960.0" spacing="20.0" style="-fx-background-color: white;">
                  <children>
                      <Label styleClass="titre-xxl" text="Créez votre compte" />
      
                      <ImageView fx:id="logo" fitHeight="281.0" fitWidth="262.0">
                          <image>
                              <Image url="@../img/Logo.png" />
                          </image>
                      </ImageView>
      
                      <VBox maxWidth="698.0" prefHeight="306.0" prefWidth="698.0" spacing="12">
         <children>
                             <TextField fx:id="fieldNom" promptText="Nom" styleClass="champ" />
                             <TextField fx:id="fieldPrenom" promptText="Prénom" styleClass="champ" />
                             <TextField fx:id="fieldEmail" promptText="Email" styleClass="champ" />
                             <TextField fx:id="fieldTelephone" promptText="Numéro de téléphone" styleClass="champ" />
                             <TextField fx:id="fieldAdresse" promptText="Adresse" styleClass="champ" />
                             <PasswordField fx:id="fieldPassword" promptText="Mot de passe" styleClass="champ" />
         </children>
                      </VBox>
      
                      <HBox alignment="CENTER" spacing="30">
         <children>
                             <RadioButton fx:id="radioBenevole" text="Bénévole" toggleGroup="$groupe" />
                             <RadioButton fx:id="radioPro" text="Professionnel" toggleGroup="$groupe" />
         </children>
                      </HBox>
      
                      <Button fx:id="btnInscrire" styleClass="bouton-orange" text="S'inscrire" />
                  </children>
               </VBox>
   
               <!-- Colonne image à droite -->
               <ImageView fx:id="imageHelico" fitHeight="900.0" fitWidth="960.0" preserveRatio="true">
                   <image>
                       <Image url="@../img/AccueilHelico.png" />
                   </image>
               </ImageView>
           </children>
        </HBox>
    </center>

    <bottom>
        <HBox alignment="BOTTOM_LEFT" spacing="10" style="-fx-background-color: #F97316;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
           <children>
               <Button styleClass="bouton-retour" text="← Retour" />
           </children>
        </HBox>
    </bottom>
</BorderPane>
