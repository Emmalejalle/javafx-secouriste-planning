<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="root" stylesheets="@../style/GererSecouristes.css" 
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.GererSecouristesController">
   
   <!-- HEADER -->
   <top>
      <Pane fx:id="headerPlaceholder" minHeight="70.0" prefHeight="70.0" />
   </top>

   <!-- CONTENU PRINCIPAL -->
   <center>
      <HBox spacing="20.0" BorderPane.alignment="CENTER"
            minHeight="650.0" prefHeight="700.0" maxHeight="750.0">
         <padding>
            <Insets bottom="2.0" left="20.0" right="20.0" top="2.0" />
         </padding>
         
         <!-- PARTIE GAUCHE : Liste des Secouristes -->
         <VBox spacing="12.0" HBox.hgrow="NEVER" prefWidth="400.0">
            <children>
               <!-- En-tête avec recherche et bouton ajouter -->
               <VBox spacing="10.0" styleClass="section-header-compact">
                  <children>
                     <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <children>
                           <Label styleClass="section-title" text="Gestion des secouristes" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Button fx:id="btnAjouterSecouriste" styleClass="btn-add-secouriste" 
                                  text="+ Ajouter" onAction="#onAjouter" />
                        </children>
                     </HBox>
                     
                     <!-- Barre de recherche stylée -->
                     <HBox alignment="CENTER_LEFT" styleClass="recherche-bar-container">
                        <children>
                           <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                              <image><Image url="@../img/loupeRecherche.png" /></image>
                           </ImageView>
                           <TextField fx:id="rechercheField" 
                                     promptText="Rechercher un secouriste..." 
                                     styleClass="search-field" HBox.hgrow="ALWAYS" />
                        </children>
                     </HBox>
                  </children>
               </VBox>
               
               <!-- Liste des secouristes dans un ScrollPane -->
               <ScrollPane styleClass="liste-scroll" 
                          hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                          prefHeight="570.0" VBox.vgrow="ALWAYS">
                  <content>
                     <VBox fx:id="vboxListe" spacing="6.0" styleClass="liste-secouristes">
                        <padding>
                           <Insets bottom="10.0" left="12.0" right="12.0" top="10.0" />
                        </padding>
                        <!-- Les vignettes de secouristes seront ajoutées dynamiquement ici -->
                     </VBox>
                  </content>
               </ScrollPane>
            </children>
         </VBox>
         
         <!-- PARTIE DROITE : Détails du secouriste sélectionné -->
         <BorderPane fx:id="detailsPane" 
                    styleClass="details-panel" HBox.hgrow="ALWAYS"
                    minWidth="450.0" prefWidth="550.0">
            <center>
               <!-- Contenu dynamique -->
            </center>
         </BorderPane>
      </HBox>
   </center>
   
   <!-- FOOTER ORANGE 100px -->
   <bottom>
      <HBox alignment="CENTER_LEFT" styleClass="footer-orange"
            minHeight="100.0" prefHeight="100.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Button fx:id="retourButton" onAction="#onRetour" 
                   styleClass="btn-retour-bleu" text="← Retour" />
         </children>
      </HBox>
   </bottom>
</BorderPane>