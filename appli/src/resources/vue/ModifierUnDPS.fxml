<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="details-pane-container" 
            xmlns="http://javafx.com/javafx/8" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.FormulaireDpsController">
    <top>
        <Label fx:id="titreFormLabel" styleClass="details-titre" text="Modifier le DPS" />
    </top>
    <center>
        <GridPane hgap="40.0" vgap="15.0">
            <padding><Insets top="20.0" /></padding>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints hgrow="SOMETIMES" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            
            <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label styleClass="form-label" text="Sport :" />
                <ComboBox fx:id="sportComboBox" prefWidth="300.0" promptText="Choisir un sport" />
            </VBox>
            
            <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label styleClass="form-label" text="Site :" />
                <ComboBox fx:id="siteComboBox" prefWidth="300.0" promptText="Choisir un site" />
            </VBox>
            
            <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label styleClass="form-label" text="Horaire début :" />
                <Spinner fx:id="heureDebutSpinner" editable="true" max="23" min="0" 
                         styleClass="number-spinner" />
            </VBox>
            
            <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label styleClass="form-label" text="Horaire fin :" />
                <Spinner fx:id="heureFinSpinner" editable="true" max="24" min="1" 
                         styleClass="number-spinner" />
            </VBox>
            
            <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <Label styleClass="form-label" text="Journée :" />
                <DatePicker fx:id="journeePicker" />
            </VBox>
        </GridPane>
    </center>
    <bottom>
        <VBox spacing="15.0">
            <padding><Insets top="25.0" /></padding>
            <Separator />
            <Label styleClass="form-label" text="Modifier les besoins en compétence (nombre) :" />
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <ComboBox fx:id="competenceComboBox" prefWidth="300.0" 
                          promptText="Choisir une compétence" />
                <Spinner fx:id="nombreSpinner" editable="true" initialValue="1" 
                         max="20" min="1" prefWidth="80.0" styleClass="number-spinner" />
                <Button onAction="#onAjouterBesoin" styleClass="button-primary" text="+" />
            </HBox>
            <ListView fx:id="besoinsListView" prefHeight="120.0" />
            <HBox alignment="CENTER_RIGHT" spacing="15.0">
                <padding><Insets top="20.0" /></padding>
                <Button onAction="#onAnnuler" styleClass="button-secondary" text="Annuler" />
                <Button fx:id="validerButton" onAction="#onValider" 
                        styleClass="button-primary" text="Valider" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>