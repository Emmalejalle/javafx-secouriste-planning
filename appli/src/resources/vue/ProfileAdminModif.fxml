<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="988.0" prefWidth="1826.0" stylesheets="@../style/ProfileAdminModif.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProfileAdminModifController">

    <!-- HEADER -->
    <top>
        <Pane fx:id="headerPane" prefHeight="100" style="-fx-background-color: white;" />
        <fx:include source="PatronHeaderAdmin.fxml" />

    </top>

    <!-- CENTER -->
    <center>
        <VBox fx:id="mainContainer" alignment="TOP_CENTER" prefHeight="788.0" prefWidth="1824.0" spacing="0">
           <children>
   
               <!-- Banner -->
               <ImageView fx:id="bannerImage" fitHeight="275" fitWidth="1890.0" preserveRatio="false">
                   <image>
                  <Image url="@../img/montagneProfil.png" />
               </image>
               </ImageView>
   
               <!-- Main content -->
               <StackPane fx:id="contentStack" prefHeight="753" prefWidth="1480">
                   <children>
                       <!-- White ScrollPane -->
                       <ScrollPane fx:id="mainScroll" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="753" prefWidth="1480" style="-fx-background: white; -fx-background-color: white;" vbarPolicy="AS_NEEDED">
                           <content>
                               <VBox fx:id="infoBox" alignment="TOP_CENTER" spacing="30">
                                  <children>
      
                                      <!-- Avatar + Name -->
                                      <VBox fx:id="avatarBox" alignment="CENTER" spacing="10">
         <children>
                                             <ImageView fx:id="avatarImage" fitHeight="160" fitWidth="160" preserveRatio="true" styleClass="profile-image">
                                                 <image>
                                          <Image url="@../img/pdp.png" />
                                       </image>
                                             </ImageView>
                                             <Label fx:id="lblName" styleClass="profile-name" text="Patrick David" />
         </children>
                                      </VBox>
      
                                      <!-- Fields columns -->
                                      <HBox fx:id="fieldsBox" alignment="TOP_CENTER" spacing="40">
         <children>
         
                                             <!-- Left column -->
                                             <VBox fx:id="leftCol" alignment="TOP_LEFT" spacing="24">
                                                 <padding>
                                          <Insets bottom="20" left="20" right="0" top="0" />
                                       </padding>
            <children>
                                                    
                                                    <!-- Phone -->
                                                    <Label fx:id="lblPhoneTitle" styleClass="field-label" text="Téléphone :" />
            
                                                    <HBox fx:id="TelBox" alignment="CENTER_LEFT" maxHeight="70" maxWidth="450" minHeight="70" minWidth="450" prefHeight="70" prefWidth="450" spacing="8" styleClass="info-box">
               <children>
               
                                                           <!-- Icône à gauche dans le même conteneur -->
                                                           <ImageView fitHeight="20" fitWidth="20">
                                                               <image>
                                                      <Image url="@../img/svgTel.png" />
                                                   </image>
                                                           </ImageView>
               
                                                           <!-- Puis le champ éditable -->
                                                           <TextField fx:id="TelValue" promptText="06 14 23 72 90" styleClass="field-value" HBox.hgrow="ALWAYS" />
               </children>
                                                    </HBox>
                                        
                                                    <!-- Email -->
                                                   <Label fx:id="lblEmailTitle" styleClass="field-label" text="Email :" />
            
                                                    <HBox fx:id="emailBox" alignment="CENTER_LEFT" maxHeight="70" maxWidth="450" minHeight="70" minWidth="450" prefHeight="70" prefWidth="450" spacing="8" styleClass="info-box">
               <children>
               
                                                           <!-- Icône à gauche dans le même conteneur -->
                                                           <ImageView fitHeight="20" fitWidth="20">
                                                               <image>
                                                      <Image url="@../img/svgMail.png" />
                                                   </image>
                                                           </ImageView>
               
                                                           <!-- Puis le champ éditable -->
                                                           <TextField fx:id="tfEmailValue" promptText="patrick.david@gmail.com" styleClass="field-value" HBox.hgrow="ALWAYS" />
               </children>
                                                    </HBox>
            
                                                    <!-- Statut -->
                                                    <Label fx:id="lblStatusTitle" styleClass="field-label" text="Statut :" />
            
                                                    <HBox fx:id="StatutBox" alignment="CENTER_LEFT" maxHeight="70" maxWidth="450" minHeight="70" minWidth="450" prefHeight="70" prefWidth="450" spacing="8" styleClass="info-box">
               <children>
               
                                                           <!-- Icône à gauche dans le même conteneur -->
                                                           <ImageView fitHeight="20" fitWidth="20">
                                                               <image>
                                                      <Image url="@../img/svgProfil.png" />
                                                   </image>
                                                           </ImageView>
               
                                                           <!-- Puis le champ éditable -->
                                                           <TextField fx:id="StatusValue" promptText="Professionnel" styleClass="field-value" HBox.hgrow="ALWAYS" />
               </children>
                                                    </HBox>
            
            
                                                    <!-- ID -->
                                                    <Label fx:id="lblIdTitle" styleClass="field-label" text="ID :" />
            
                                                    <HBox fx:id="StatutBox" alignment="CENTER_LEFT" maxHeight="70" maxWidth="450" minHeight="70" minWidth="450" prefHeight="70" prefWidth="450" spacing="8" styleClass="info-box">
               <children>
               
                                                           <!-- Icône à gauche dans le même conteneur -->
                                                           <ImageView fitHeight="20" fitWidth="20">
                                                               <image>
                                                      <Image url="@../img/svgId.png" />
                                                   </image>
                                                           </ImageView>
               
                                                           <!-- Puis le champ éditable -->
                                                           <TextField fx:id="IdValue" editable="false" promptText="12345" styleClass="field-value" HBox.hgrow="ALWAYS" />
               </children>
                                                    </HBox>
            </children>
         
                                             </VBox>
         
                                             <!-- Separator -->
                                             <Pane fx:id="separatorPane" prefWidth="8" style="-fx-background-color: #1e40af;" />
         
                                             <!-- Right column -->
                                             <VBox fx:id="rightCol" alignment="TOP_LEFT" spacing="24">
                                                 <padding>
                                          <Insets bottom="20" left="0" right="20" top="0" />
                                       </padding>
            <children>
                                                    
                                                    <!-- Address -->
                                                    <Label fx:id="lblAddressTitle" styleClass="field-label" text="Adresse :" />
            
                                                    <HBox fx:id="AdressBox" alignment="CENTER_LEFT" maxHeight="70" maxWidth="450" minHeight="70" minWidth="450" prefHeight="70" prefWidth="450" spacing="8" styleClass="info-box">
               <children>
               
                                                           <!-- Icône à gauche dans le même conteneur -->
                                                           <ImageView fitHeight="20" fitWidth="20">
                                                               <image>
                                                      <Image url="@../img/svgLocation.png" />
                                                   </image>
                                                           </ImageView>
               
                                                           <!-- Puis le champ éditable -->
                                                           <TextField fx:id="AdressValue" promptText="34 rue du secours" styleClass="field-value" HBox.hgrow="ALWAYS" />
               </children>
                                                    </HBox>
            
            
                                                    <!-- Anniv -->
                                                    <Label fx:id="lblBirthTitle" styleClass="field-label" text="Date de naissance :" />
            
                                                    <HBox fx:id="AnnivBox" alignment="CENTER_LEFT" maxHeight="70" maxWidth="450" minHeight="70" minWidth="450" prefHeight="70" prefWidth="450" spacing="8" styleClass="info-box">
               <children>
               
                                                           <!-- Icône à gauche dans le même conteneur -->
                                                           <ImageView fitHeight="20" fitWidth="20">
                                                               <image>
                                                      <Image url="@../img/svgAnniv.png" />
                                                   </image>
                                                           </ImageView>
               
                                                           <!-- Puis le champ éditable -->
                                                           <TextField fx:id="AnnivValue" promptText="02/04/1996" styleClass="field-value" HBox.hgrow="ALWAYS" />
               </children>
                                                    </HBox>
            
                                                    <!-- Password -->
                                                    <Label fx:id="lblPwdTitle" styleClass="field-label" text="Mot de passe :" />
            
                                                    <HBox fx:id="MDPBox" alignment="CENTER_LEFT" maxHeight="70" maxWidth="450" minHeight="70" minWidth="450" prefHeight="70" prefWidth="450" spacing="8" styleClass="info-box">
               <children>
               
                                                           <!-- Icône à gauche dans le même conteneur -->
                                                           <ImageView fitHeight="20" fitWidth="20">
                                                               <image>
                                                      <Image url="@../img/svgMdp.png" />
                                                   </image>
                                                           </ImageView>
               
                                                           <!-- Puis le champ éditable -->
                                                           <TextField fx:id="MDPValue" promptText="••••••••" styleClass="field-value" HBox.hgrow="ALWAYS" />
               </children>
                                                    </HBox>
            </children>
                                             </VBox>
         </children>
                                      </HBox>
                                  </children>
                               </VBox>
                           </content>
                       </ScrollPane>
   
                       <!-- Buttons: Modify, Validate, Cancel -->
                       <Button fx:id="btnModifyProfile" prefHeight="60" prefWidth="250" style="-fx-background-color: gray; -fx-text-fill: white;" styleClass="edit-button" text="Modifier le Profil" StackPane.alignment="TOP_RIGHT">
                           <StackPane.margin>
                        <Insets right="200" top="20" />
                     </StackPane.margin>
                       </Button>
                       <Button fx:id="btnValidate" onAction="#onValidate" prefHeight="50" prefWidth="120" styleClass="validate-button" text="Valider" StackPane.alignment="TOP_RIGHT">
                           <StackPane.margin>
                        <Insets right="200" top="100" />
                     </StackPane.margin>
                       </Button>
                       <Button fx:id="btnCancel" onAction="#onCancel" prefHeight="50" prefWidth="120" styleClass="cancel-button" text="Annuler" StackPane.alignment="TOP_RIGHT">
                           <StackPane.margin>
                        <Insets right="200" top="160" />
                     </StackPane.margin>
                       </Button>
                   </children>
               </StackPane>
           </children>
        </VBox>
    </center>

    <!-- FOOTER -->
    <bottom>
        <HBox alignment="BOTTOM_LEFT" prefHeight="100" spacing="10" style="-fx-background-color: #F97316;">
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
           <children>
               <Button fx:id="btnReturn" onAction="#onReturn" styleClass="back-button" text="← Retour" />
           </children>
        </HBox>
    </bottom>

</BorderPane>
