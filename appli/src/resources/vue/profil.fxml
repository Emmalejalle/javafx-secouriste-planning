<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="1080" prefWidth="1920" stylesheets="@../style/profil.css"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox styleClass="header-bar" spacing="20" alignment="CENTER_LEFT">
            <ImageView fitWidth="48" fitHeight="48">
                <image><Image url="@../img/svgHome.png"/></image>
            </ImageView>
            <ImageView fitWidth="48" fitHeight="48">
                <image><Image url="@../img/svgPlanning.png"/></image>
            </ImageView>
            <ImageView fitWidth="48" fitHeight="48">
                <image><Image url="@../img/svgCalendrier.png"/></image>
            </ImageView>
            <Label text="Profil secouriste - vue admin" styleClass="header-title"/>
        </HBox>
    </top>

    <center>
        <HBox alignment="CENTER" spacing="50" styleClass="main-content">
            <!-- Profil à gauche -->
            <VBox styleClass="profile-card" spacing="15" alignment="CENTER">
                <ImageView fitWidth="150" fitHeight="150" styleClass="profile-photo">
                    <image><Image url="@../img/pdp.png"/></image>
                </ImageView>
                <Label text="Patrick David" styleClass="profile-name"/>
                <VBox spacing="10">
                    <Label text="Téléphone :" styleClass="info-label"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <ImageView fitWidth="24" fitHeight="24">
                            <image><Image url="@../img/svgTel.png"/></image>
                        </ImageView>
                        <Label text="06 14 23 72 90" styleClass="info-value"/>
                    </HBox>

                    <Label text="Email :" styleClass="info-label"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <ImageView fitWidth="24" fitHeight="24">
                            <image><Image url="@../img/svgMail.png"/></image>
                        </ImageView>
                        <Label text="patrick.david@gmail.com" styleClass="info-value"/>
                    </HBox>

                    <Label text="Statut :" styleClass="info-label"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <ImageView fitWidth="24" fitHeight="24">
                            <image><Image url="@../img/svgProfil.png"/></image>
                        </ImageView>
                        <Label text="Professionnel" styleClass="info-value"/>
                    </HBox>
                </VBox>
            </VBox>

            <!-- Certifications à droite -->
            <VBox spacing="20" alignment="TOP_LEFT">
                <Label text="Certifications" styleClass="section-title"/>
                <VBox spacing="10">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Cadre Opérationnel" styleClass="certification-button"/>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="@../img/svgTelecharger.png"/></image>
                        </ImageView>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Chef de Poste" styleClass="certification-button"/>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="@../img/svgTelecharger.png"/></image>
                        </ImageView>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Chef d’Équipe" styleClass="certification-button"/>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="@../img/svgTelecharger.png"/></image>
                        </ImageView>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Pilote d’hélicoptère" styleClass="certification-button"/>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="@../img/svgTelecharger.png"/></image>
                        </ImageView>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Pilote de moto neige" styleClass="certification-button"/>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="@../img/svgTelecharger.png"/></image>
                        </ImageView>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="VPSP" styleClass="certification-button"/>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="@../img/svgTelecharger.png"/></image>
                        </ImageView>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="PSC1" styleClass="certification-button"/>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="@../img/svgTelecharger.png"/></image>
                        </ImageView>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="PSC2" styleClass="certification-button"/>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="@../img/svgTelecharger.png"/></image>
                        </ImageView>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Secouriste de montagne" styleClass="certification-button"/>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="@../img/svgTelecharger.png"/></image>
                        </ImageView>
                    </HBox>
                </VBox>
                <Button text="Modifier les compétences" styleClass="action-button"/>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" styleClass="footer-bar">
            <Button text="Retour"/>
        </HBox>
    </bottom>
</BorderPane>
