<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
            prefHeight="1080.0" prefWidth="1920.0" stylesheets="@../style/test.css">

    <top>
        <HBox styleClass="header" alignment="CENTER_LEFT" spacing="20">
            <ImageView fitHeight="40" fitWidth="40">
                <image>
                    <Image url="@../img/svgHome.png"/>
                </image>
            </ImageView>
            <ImageView fitHeight="40" fitWidth="40">
                <image>
                    <Image url="@../img/svgPlanning.png"/>
                </image>
            </ImageView>
            <ImageView fitHeight="40" fitWidth="40">
