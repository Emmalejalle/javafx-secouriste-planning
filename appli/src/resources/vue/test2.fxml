                    <Button text="PSC1" styleClass="certification-button"/>
                    <Button text="PSC2" styleClass="certification-button"/>
                    <Button text="Secouriste de montagne" styleClass="certification-button"/>
                </FlowPane>
                <Button text="Modifier les compétences" styleClass="button-action"/>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox styleClass="footer" spacing="10" alignment="CENTER_LEFT">
            <Button text="Retour" />
        </HBox>
    </bottom>
</BorderPane>
