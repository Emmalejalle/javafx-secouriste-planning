    <center>
        <HBox spacing="40" alignment="CENTER" style="-fx-padding: 40px;">
            <!-- Profil -->
            <VBox spacing="16" styleClass="profile-card" prefWidth="400">
                <ImageView fitWidth="150" fitHeight="150" styleClass="profile-avatar">
                    <image>
                        <Image url="@../img/pdp.png"/>
                    </image>
                </ImageView>
                <Label text="Patrick David" styleClass="label-title" alignment="CENTER"/>
                <Label text="Téléphone :" />
                <HBox spacing="10" styleClass="text-box">
                    <ImageView fitWidth="20" fitHeight="20">
                        <image><Image url="@../img/svgTel.png"/></image>
                    </ImageView>
                    <Label text="06 14 23 72 90" />
                </HBox>
                <Label text="Email :" />
                <HBox spacing="10" styleClass="text-box">
                    <ImageView fitWidth="20" fitHeight="20">
                        <image><Image url="@../img/svgMail.png"/></image>
                    </ImageView>
                    <Label text="patrick.david@gmail.com" />
                </HBox>
                <Label text="Statut :" />
                <HBox spacing="10" styleClass="text-box">
                    <ImageView fitWidth="20" fitHeight="20">
                        <image><Image url="@../img/svgProfil.png"/></image>
                    </ImageView>
                    <Label text="Professionnel" />
                </HBox>
            </VBox>

            <!-- Certifications -->
            <VBox spacing="16" prefWidth="600">
                <Label text="Certifications" styleClass="label-title"/>
